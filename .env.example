PORT=4000
# JWT_SECRET is REQUIRED - generate a strong secret for production
JWT_SECRET=change_this_to_a_strong_random_secret_at_least_32_chars
MONGODB_URI=mongodb://localhost:27017/social_app
REDIS_URL=redis://localhost:6379
PUBLIC_BASE_URL=http://localhost:4000

# CORS origin - set to your frontend URL in production
CORS_ORIGIN=http://localhost:3000

# Optional HTTPS support (required for camera/mic on non-localhost origins)
# SSL_KEY_PATH=/absolute/path/to/privkey.pem
# SSL_CERT_PATH=/absolute/path/to/fullchain.pem
# SSL_CA_PATH=/absolute/path/to/chain.pem

# Cloudinary configuration (required for file uploads)
# Get these from your Cloudinary dashboard at https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# TURN/STUN configuration for WebRTC clients
STUN_URLS=stun:stun.l.google.com:19302
TURN_URLS=turn:localhost:3478?transport=udp,turn:localhost:3478?transport=tcp
TURN_USERNAME=demo
TURN_CREDENTIAL=demo123

# Reels processing
MAX_REEL_DURATION_SECONDS=60

# Firebase Storage configuration (required for cloud uploads)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
